<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="8dp">

    <!-- Language Selector (moved above buttons) -->
    <Spinner
        android:id="@+id/languageSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:background="#EEEEEE"
        android:padding="10dp"
        android:spinnerMode="dropdown" />

    <!-- Toolbar (moved below the spinner) -->
    <LinearLayout
        android:id="@+id/fileToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="4dp">

        <ImageButton
            android:id="@+id/btnNew"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_add"
            android:contentDescription="New"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageButton
            android:id="@+id/btnOpen"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_view"
            android:contentDescription="Open"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageButton
            android:id="@+id/btnSave"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_save"
            android:contentDescription="Save"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageButton
            android:id="@+id/btnCompile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_media_play"
            android:contentDescription="Compile"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_more"
            android:contentDescription="More Options"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <!-- Code Editor with Line Numbers -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Line Numbers -->
            <TextView
                android:id="@+id/lineNumbers"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:text="1"
                android:textColor="#888888"
                android:gravity="top|end"
                android:fontFamily="monospace"
                android:background="#EEEEEE" />

            <!-- Editor -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/editor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:background="#FFFFFF"
                    android:gravity="top|start"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:fontFamily="monospace"
                    android:scrollbars="vertical"
                    android:minLines="20" />
            </ScrollView>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Status Bar -->
    <TextView
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="untitled.txt | Words: 0 | Chars: 0"
        android:textColor="#2E7D32"
        android:textSize="12sp"
        android:padding="5dp"
        android:background="#E0E0E0" />

</LinearLayout>
