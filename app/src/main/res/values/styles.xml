<resources>
    <!-- Chip-like small buttons in the secondary strip -->
    <style name="ChipButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">32dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/bg_chip</item>
        <item name="android:textColor">@color/text_body</item>
    </style>

    <!-- Tabs for bottom panel -->
    <style name="TabButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_body</item>
    </style>
</resources>
